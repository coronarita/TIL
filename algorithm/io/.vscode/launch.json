// 파일이름과 동일한 이름의 txt파일로 input 받고, output은 콘솔창으로 ! 
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["<", "${relativeFileDirname}/${fileBasenameNoExtension}.txt"]
        }
    ]
}